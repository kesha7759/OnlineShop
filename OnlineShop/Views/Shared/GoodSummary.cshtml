@model Good
<tr>
    <td>
        @Model.GoodID
    </td>
    <td>
        @Model.Name
    </td>
    <td>
        @Model.Value
    </td>
    <td>
        @Model.Articul
    </td>
    <td>
        <form id="@Model.GoodID" asp-action="AddToCart" asp-controller="Cart" method="post">
            <input type="hidden" asp-for="GoodID" />
            <input type="hidden" name="returnUrl" value="@ViewContext.HttpContext.Request.PathAndQuery()" />
            <span class="card-text p-1">
                <button type="submit" class="btn btn-success btn-sm float-right">Добавить</button>
            </span>
        </form>
    </td>
</tr>